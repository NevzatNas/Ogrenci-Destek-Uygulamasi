<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Deneme2023_Scren">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart2023"
        android:layout_width="395dp"
        android:layout_height="498dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="625dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/matNet01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Matematik 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/matNet02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Matematik 2"
            android:inputType="number" />

        <EditText
            android:id="@+id/matNet03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Matematik 3"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="665dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/turkNet01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Türkçe  1"
            android:inputType="number" />

        <EditText
            android:id="@+id/turkNet02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Türkçe 2"
            android:inputType="number" />

        <EditText
            android:id="@+id/turkNet03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Türkçe 3"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/showChartButton1"
        android:layout_width="193dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="25dp"
        android:text="Grafiği Göster"
        android:background="@color/purple_200"/>

    <TextView
        android:id="@+id/tp1"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="40dp"
        android:text="Toplam Net:"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tp2"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="40dp"
        android:text="Toplam Net:"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tp3"
        android:layout_width="72dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="285dp"
        android:layout_marginTop="579dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="40dp"
        android:text="Toplam Net:"
        android:textSize="14dp"
        android:textStyle="bold" />

</RelativeLayout>